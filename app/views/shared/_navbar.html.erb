<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <% if owner_signed_in? %>
      <%= link_to owner_path(@owner), class: "navbar-brand" do %>
      <%= image_tag "logo-catseyes.png" %>
      <% end %>
    <% else %>
      <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo-catseyes.png" %>
      <% end %>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if owner_signed_in? %>
          <li class="nav-item active">
            <%= link_to "My Home", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "My Bookings", "#", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "profile-pic-default.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Log out", destroy_owner_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
              <%# link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_owner_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
